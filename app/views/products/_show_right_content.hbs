<h2>{{product.name}}</h2>
<div class="size-block">
  <span class="label">select size</span>
  <span class="size disabled">s</span>
  <span class="size disabled">m</span>
  <span class="size">l</span>
  <span class="size">xl</span>
  <span class="size-chart">size chart</span>
</div>
<p class="colors">
  <span class="label">select color</span>
  <span class="color red"></span>
  <span class="color green"></span>
  <span class="color blue"></span>
  <span class="color pink"></span>
</p>
<p class="price">
  <span class='actual-price'>$30.<sup>98</sup></span>
  <span class="discounted-price">${{product.price}}</span>
</p>
<p class="button">
  <input type="button" name="buy-now" value="buy now" class="btn-buy"/>
</p>
<div class="tabs">
  <div class="tab">
    <input type="radio" id="tab-2" name="tab-group-1" checked="checked">
    <label for="tab-2">Product details</label>
    <div class="content">
      {{#each productProperties}}
        <li>
          {{property_name}} : {{value}}
        </li>
      {{/each}}
    </div> 
  </div>
  <div class="tab">
    <input type="radio" id="tab-3" name="tab-group-1">
    <label for="tab-3">Material &amp; Care</label>
    <div class="content">
      {{product.description}}
    </div> 
  </div>
</div>