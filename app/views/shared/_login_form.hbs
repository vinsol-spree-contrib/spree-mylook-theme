<div class="modal fade" id="login-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <img src="../images/logo.png">
      </div>
      <div class="modal-body">
        <aside class="login-modal">
          <h4 >Log In To Your Account</h4>
          <form id="login">
            <span class="input input_animate">
            <!-- <input  type="text" id="user-login-name" name="user-login-name" /> -->
            <input type="email" id="user-login-name" placeholder="Email" class="input_field input_field_animation">
            <label class="input_label input_label_animate" for="user-login-name">
              <span class="input_label_content">Username</span>
            </label>
          </span>

          <span class="input input_animate">
            <input class="input_field input_field_animation" id="user-login-password" type="password" placeholder="Password">
            <label class="input_label input_label_animate" for="user-login-password">
              <span class="input_label_content">Password</span>
            </label>
          </span>

          <div class='field'>
            <label class="control control_checkbox">
              <input type="checkbox" name="" id="rem_me"/>
              Remember me
              <div class="control_indicator"></div>
            </label>
          </div>

            <button type="submit" class="btn-action btn-block">
              <span class="material-icons vertical-middle">flash_on</span>
              Log in
            </button>
          </form>
        </aside>
      </div>
      <div class="modal-footer">
        <p class="text-center">
          <a href="javascript:void(0);" data-dismiss="modal" data-toggle="modal" class="color-yellow btn-modal-open" data-target="#forgot-password-modal">Forgot Password?</a></p>
        <p class="no-margin text-center">
          Don't have a account?
          <a href="javascript:void(0);" data-target="#signup-modal" data-dismiss="modal" data-toggle="modal" class="color-yellow btn-modal-open">Sign Up</a>.
        </p>
      </div>
      <div class="field text-center or"><span>OR</span></div>
          <div class="field last facebook_login text-center">
            <a href="/users/auth/facebook"><img alt="Fb login" src="https://d3lgg3ugvyyglg.cloudfront.net/assets/guest/fb_login-fb23cfcf33d0b7a39ddb8223c275797c.png"></a>
          </div>
    </div>
  </div>
</div>
