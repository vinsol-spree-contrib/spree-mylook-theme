<!-- Login Modal -->
<div class="modal fade" id="signup-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <img src="../images/logo.png">
      </div>
      <div class="modal-body">
        <h4 >Signup To Your Account</h4>
        <form id="sign-up">

          <span class="input input_animate">
            <input class="input_field input_field_animation" type="text" id="user_id" />
            <label class="input_label input_label_animate" for="user_id">
              <span class="input_label_content">Username</span>
            </label>
          </span>
          <span class="input input_animate">
            <input class="input_field input_field_animation" type="Password" id="user_pwd" />
            <label class="input_label input_label_animate" for="user_pwd">
              <span class="input_label_content">Password</span>
            </label>
          </span>

          <div class="button text-center">
            <input type="submit" name="" value="Signup" id="SignupSubmit" class="btn" />
          </div>
          <div class="field text-center or"><span>OR</span></div>
          <div class="field last facebook_login text-center">
            <a href="/users/auth/facebook"><img alt="Fb login" src="https://d3lgg3ugvyyglg.cloudfront.net/assets/guest/fb_login-fb23cfcf33d0b7a39ddb8223c275797c.png"></a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>